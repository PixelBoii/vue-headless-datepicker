{
    "include": [
        "src/**/*.ts",
        "src/**/*.vue"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ],
    "compilerOptions": {
        "esModuleInterop": true,
        "moduleResolution": "NodeNext",
        "lib": [
            "ESNext",
            "DOM",
            "DOM.Iterable"
        ],
        "paths": {
            "@/*": [
                "./src/*"
            ]
        }
    }
}